<?php

/**
 * @file
*
* FeedsXls tests.
*/
class FeedsXlsTestCase extends ScratchpadsTweaksTestCase{

  protected $admin_user;

  protected $test_user;

  public static function getInfo(){
    return array(
      'name' => 'FeedsXls',
      'description' => "Test access to the import pages and template files",
      'group' => 'Scratchpads'
    );
  }

  /**
   * Enable modules and create users with specific permissions.
   */
  public function setUp(){
    $modules[] = 'feeds_xls';
    parent::setUp($modules);
    //  Create users.
    $this->admin_user = $this->drupalCreateUser(array(
      'access content',
      'access administration pages',
      'administer site configuration',
      'administer users',
      'administer permissions',
      'administer content types',
      'administer nodes',
      'bypass node access',
      'access overlay',
      'access content overview',
      'view the administration theme',
      'access all views',
      'administer comments',
      'administer taxonomy',
      'administer feeds',
      'feeds xls allow download'
    ));
    $this->test_user = $this->drupalCreateUser(array(
      'access content'
    ));
    // We set the legal_accepted on the user so that login passes.
    parent::scratchpads_tweaks_legal_save($this->admin_user->uid);
    parent::scratchpads_tweaks_legal_save($this->test_user->uid);
  }

  /**
   * Test access to the import pages and template files
   */
  function testImporterAccess(){
    $this->drupalLogin($this->admin_user);
    $this->drupalGet('admin/import');
    $this->assertResponse(200);
    $this->drupalGet('import/node_importer_page');
    $this->clickLink('Excel template file', 0);
    $this->assertResponse(200);
    // the populated template
    $this->drupalGet('import/node_importer_page');
    $this->clickLink('Excel template file', 1);
    $this->assertResponse(200);
    $this->drupalLogin($this->test_user);
    $this->drupalGet('import/node_importer_page');
    $this->assertResponse(403, 'Non admin user denied access to import/node_importer_page');
    $this->drupalGet('admin/import');
    $this->assertResponse(403, 'Non admin user denied access to admin/import');
  }
}
  







